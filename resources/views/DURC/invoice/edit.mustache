	<h1>invoice</h1>
<div class='card'>
  <div class='card-header'>
<h4> {{durc_instance_name}}</h4>
<ul>
<li> <a href='/DURC/invoice/'>Return to invoice list</a> </li>
{{^is_new}}
<li> <a href='/DURC/invoice/create'>Create new invoice </a> </li>
{{/is_new}}
</ul>
  </div>
<div class='card-body'>

  <fieldset>
    <legend>Edit {{durc_instance_name}}  </legend>
	<input type='hidden' name='_token' value='{{csrf_token}}'>
	
  <div class='form-group row {{id_row_class}}'>
    <label for='id' class='col-sm-2 col-form-label'>id</label>
    <div class='col-sm-10'>
      <input type='text' class='form-control' id='id' name='id' placeholder='' value='{{id}}'>
    </div>
  </div>

  <div class='form-group row {{order_id_row_class}}'>
    <label for='order_id' class='col-sm-2 col-form-label'>order_id</label>
    <div class='col-sm-10'>
	Current id value: {{order_id}} (see below for lookup value)<br>
	<select class='select2_order_id form-control' id='order_id' name='order_id' form-control'>
	<option value='{{order_id}}' selected='selected'>{{order_id}}</option>
	</select>
    </div>
  </div>

<script type='text/javascript'>

$('.select2_order_id').select2({
  ajax: {
    	url: '/DURC/searchjson/order/',
    	dataType: 'json'
  }
});


</script>


  <div class='form-group row {{invoiceDate_row_class}}'>
    <label for='invoiceDate' class='col-sm-2 col-form-label'>invoiceDate</label>
    <div class='col-sm-10'>
      <input type='text' class='form-control' id='invoiceDate' name='invoiceDate' placeholder='' value='{{invoiceDate}}'>

<button type='button' class='btn btn-primary' id='invoiceDate_FontPicker'>
<img src='/images/DURC/ic_today_black_24dp_1x.png'> 
</button>
<button type='button' class='btn btn-primary' id='invoiceDate_TodayNow'> Today and Now</button>

<script>
	var invoiceDateConv = new AnyTime.Converter({format: '%Y-%m-%d %T'});
  	$('#invoiceDate_TodayNow').click( function(e) {
      		$('#invoiceDate').val(invoiceDateConv.format(new Date())).change(); } );

    	$('#invoiceDate_FontPicker').click(
      		function(e) {
        		$('#invoiceDate').AnyTime_noPicker().AnyTime_picker(
				{
    					format: '%Y-%m-%d %T',
    					formatUtcOffset: '%: (%@)'
				} 
			).focus();
        	e.preventDefault();
        	} );
</script>

    </div>
  </div>

  <div class='form-group row {{dueDate_row_class}}'>
    <label for='dueDate' class='col-sm-2 col-form-label'>dueDate</label>
    <div class='col-sm-10'>
      <input type='text' class='form-control' id='dueDate' name='dueDate' placeholder='' value='{{dueDate}}'>

<button type='button' class='btn btn-primary' id='dueDate_FontPicker'>
<img src='/images/DURC/ic_today_black_24dp_1x.png'> 
</button>
<button type='button' class='btn btn-primary' id='dueDate_TodayNow'> Today and Now</button>

<script>
	var dueDateConv = new AnyTime.Converter({format: '%Y-%m-%d %T'});
  	$('#dueDate_TodayNow').click( function(e) {
      		$('#dueDate').val(dueDateConv.format(new Date())).change(); } );

    	$('#dueDate_FontPicker').click(
      		function(e) {
        		$('#dueDate').AnyTime_noPicker().AnyTime_picker(
				{
    					format: '%Y-%m-%d %T',
    					formatUtcOffset: '%: (%@)'
				} 
			).focus();
        	e.preventDefault();
        	} );
</script>

    </div>
  </div>

  <div class='form-group row {{tax_row_class}}'>
    <label for='tax' class='col-sm-2 col-form-label'>tax</label>
    <div class='col-sm-10'>
      <input type='text' class='form-control' id='tax' name='tax' placeholder='' value='{{tax}}'>
    </div>
  </div>

  <div class='form-group row {{shipping_row_class}}'>
    <label for='shipping' class='col-sm-2 col-form-label'>shipping</label>
    <div class='col-sm-10'>
      <input type='text' class='form-control' id='shipping' name='shipping' placeholder='' value='{{shipping}}'>
    </div>
  </div>

  <div class='form-group row {{amountDue_row_class}}'>
    <label for='amountDue' class='col-sm-2 col-form-label'>amountDue</label>
    <div class='col-sm-10'>
      <input type='text' class='form-control' id='amountDue' name='amountDue' placeholder='' value='{{amountDue}}'>
    </div>
  </div>

  <div class='form-group row'>
    <div class='col-sm-10'>
      <button type='submit' class='btn btn-primary'>Save Data</button>
    </div>
  </div>

</fieldset>
</div></div>
</form>

